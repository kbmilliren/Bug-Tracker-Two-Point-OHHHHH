@section Scripts
{
    
<script>
    $(document).ready(function () {

        function formatDate(obj) {
            if (obj == null)
                return null;
            var dx = new Date(parseInt(obj.substr(6)));
            var dd = dx.getDate();
            var mm = dx.getMonth() + 1;
            var yy = dx.getFullYear();

            if (dd <= 9) {
                dd = "0" + dd;
            }
            if (mm <= 9) {
                mm = "0" + mm;
            }
            return mm + "." + dd + "." + yy;
        }

        $('#table_id').dataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": "/Tickets/GetTickets",
                "type": "POST"
            },
            "columns": [
           { "data": "Id", "visible": false },
           { "data": "Title" },
           { "data": "Description" },
           {
               "data": "DateCreated",
               "render": formatDate
           },
           {
               "data": "DateUpdated",
               "render": formatDate
            
           },
           { "data": "AssignedToUser" },
           { "data": "ProjectId" },
